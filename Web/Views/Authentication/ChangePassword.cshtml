@model Web.ViewModels.IdentityViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <span class="fa fa-user-o" style="margin-right: 5px;"></span>Change Password
    </div>
    <div class="panel-body">
        @Html.AntiForgeryToken()
        @using (Html.BeginForm("ChangePassword", "Authentication", FormMethod.Post, new { @class = "form-horizontal", @style = "height: 360px; margin-top:20px; padding-left: 30px; padding-right: 30px;" }))
        {
            <fieldset>
                <div class="form-group">
                    @Html.LabelFor(c => Model.Password)
                    @Html.PasswordFor(c => Model.Password, new {@class = "form-control"})
                    @Html.ValidationMessageFor(c => Model.Password, null, new {@class = "label label-danger pull-right"})
                    <br />
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword)
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => Model.NewPassword, null, new { @class = "label label-danger pull-right" })
                    <br />
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => Model.ConfirmPassword, null, new { @class = "label label-danger pull-right" })
                    <br />
                </div>
            </fieldset>

            <br />
            <div class="form-group pull-right">
                <input id="Submit" type="submit" class="btn btn-primary pull-right" style="margin-left: 5px;" value="Submit" />
            </div>
        }
    </div>
</div>